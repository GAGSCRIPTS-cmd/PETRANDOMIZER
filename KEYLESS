-- üéÆ DRXSCRIPTS | Compact GUI Script for EGG Randomizer, Mutation Finder, and Pet Aging

-- Services
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- GUI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "DRXPetRandomizerGUI"
gui.ResetOnSpawn = false
gui.Parent = PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 240, 0, 220)
frame.Position = UDim2.new(0.5, -120, 0.3, 0)
frame.BackgroundColor3 = Color3.fromRGB(217, 253, 242)
frame.BorderColor3 = Color3.fromRGB(119, 136, 153)
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true
frame.Parent = gui

Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)
Instance.new("UIStroke", frame).Color = Color3.fromRGB(119, 136, 153)

local layout = Instance.new("UIListLayout", frame)
layout.Padding = UDim.new(0, 4)
layout.FillDirection = Enum.FillDirection.Vertical
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
layout.VerticalAlignment = Enum.VerticalAlignment.Top
layout.SortOrder = Enum.SortOrder.LayoutOrder

local function createButton(text, color)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 220, 0, 36)
    btn.BackgroundColor3 = color
    btn.Text = text
    btn.Font = Enum.Font.GothamMedium
    btn.TextSize = 16
    btn.TextColor3 = Color3.fromRGB(51, 51, 51)
    btn.AutoButtonColor = false

    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    local stroke = Instance.new("UIStroke", btn)
    stroke.Color = Color3.fromRGB(0, 0, 0)
    stroke.Thickness = 1.2

    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = color:Lerp(Color3.new(1,1,1), 0.2)}):Play()
    end)
    btn.MouseLeave:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = color}):Play()
    end)

    btn.Parent = frame
    return btn
end

-- Randomize Button
local btnRand = createButton("üé≤ Randomize Pets", Color3.fromRGB(63, 193, 201))
btnRand.MouseButton1Click:Connect(function()
    local petsFolder = workspace:FindFirstChild(player.Name .. "'s Pets") or workspace:FindFirstChild("Pets")
    if petsFolder then
        for _, pet in ipairs(petsFolder:GetDescendants()) do
            if pet:IsA("Model") then
                local petName = pet.Name
                pet.Name = petName .. " (Randomized)"
            end
        end
        print("‚úÖ Pets randomized")
    else
        warn("‚ùå Pets folder not found.")
    end
end)

-- ESP Button
local btnESP = createButton("üëÅ ESP: ON", Color3.fromRGB(255, 107, 107))
local espEnabled = true
btnESP.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    btnESP.Text = espEnabled and "üëÅ ESP: ON" or "üëÅ ESP: OFF"
    for _, obj in pairs(Workspace:GetDescendants()) do
        if obj:IsA("Model") and obj:FindFirstChild("PredictionUI") then
            obj.PredictionUI.Enabled = espEnabled
        end
    end
end)

-- Pet Mutation Finder Button
local btnMut = createButton("NEW üß¨ Pet Mutation Finder", Color3.fromRGB(255, 179, 179))
btnMut.MouseButton1Click:Connect(function()
    local mutations = {"Shiny", "Inverted", "Frozen", "Windy", "Golden"}
    local petsFolder = workspace:FindFirstChild(player.Name .. "'s Pets") or workspace:FindFirstChild("Pets")
    if petsFolder then
        for _, pet in ipairs(petsFolder:GetDescendants()) do
            if pet:IsA("Model") then
                local mutation = Instance.new("StringValue")
                mutation.Name = "Mutation"
                mutation.Value = mutations[math.random(#mutations)]
                mutation.Parent = pet
            end
        end
        print("‚úÖ Mutation tags added to pets")
    else
        warn("‚ùå Pets folder not found.")
    end
end)

-- Load Age 50 Button
local btnAge = createButton("üïí Load Pet Age 50 Script", Color3.fromRGB(119, 136, 153))
btnAge.MouseButton1Click:Connect(function()
    local petsFolder = workspace:FindFirstChild(player.Name .. "'s Pets") or workspace:FindFirstChild("Pets")
    if petsFolder then
        local updated = false
        for _, pet in ipairs(petsFolder:GetDescendants()) do
            if pet:IsA("Model") or pet:IsA("Part") then
                local age = pet:FindFirstChild("Age")
                if age and age:IsA("IntValue") then
                    age.Value = 50
                    updated = true
                end
            end
        end
        if updated then
            print("‚úÖ All pets aged to 50")
        else
            warn("‚ö† No ageable pets found.")
        end
    else
        warn("‚ùå Pets folder not found.")
    end
end)

